# Основные настройки администратора и Telegram-бота
ADMIN_TG_USERNAME=admin_username
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_DEEPLINK_TTL_MIN=10

# Интеграции LLM и генерации контента
# Опционально: отключите, если генерация не используется
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=240

# SMS-активации и антикапча
# Опционально: если не подключена sms-активация, оставьте пустым
SMS_ACTIVATE_API_KEY=sa-...
SMS_ACTIVATE_POLL_INTERVAL_SECONDS=30
SMS_ACTIVATE_MAX_POLL_ATTEMPTS=10

# Прокси-провайдер Bright Data
# Опционально: данные от аккаунта Bright Data для прокси
BRIGHTDATA_USERNAME=brightdata_user
BRIGHTDATA_PASSWORD=brightdata_password

# Общие параметры
TZ=Europe/Amsterdam
BASE_URL=https://tg.vpn-gpt.store

# База данных и сессии Telethon
DB_URL=sqlite:////absolute/path/to/tgac/data/db.sqlite3
SESSION_SECRET_KEY=base64_fernet_key  # python -c "import base64, secrets; print(base64.urlsafe_b64encode(secrets.token_bytes(32)).decode())"

# Логи и лимиты
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=7
MAX_CHANNELS_PER_ACCOUNT=50
COMMENT_COLLISION_LIMIT_PER_POST=1
MAX_ACTIVE_THREADS_PER_ACCOUNT=50
COMMENT_VISIBILITY_STALE_MINUTES=5
ACCOUNT_HEALTHCHECK_INTERVAL_MINUTES=180
ACCOUNT_HEALTHCHECK_BATCH_SIZE=100
CHANNEL_SCAN_INTERVAL_MINUTES=15
CHANNEL_SCAN_BATCH_SIZE=50
DEFAULT_PROJECT_QUOTA=5

# Параметры воркеров
WORKER_SHARDS=1
WORKER_SHARD=0
MAX_CONCURRENCY=10
EVENTS_LOG_PATH=tgac/logs/events.jsonl
